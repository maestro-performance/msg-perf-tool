#!/bin/bash

# source function library
. /etc/rc.d/init.d/functions

# pull in sysconfig settings
[ -f /@CMAKE_INSTALL_SYSCONFIG_PATH@/mpt-receiver-daemon ] && . /@CMAKE_INSTALL_SYSCONFIG_PATH@/mpt-receiver-daemon

start() {
	@CMAKE_INSTALL_PREFIX@/bin/mpt-receiver-daemon -m $MAESTRO_BROKER_URL -L $MPT_LOG_DIR -l $MPT_LOG_LEVEL
}

stop() {
	killall -TERM mpt-receiver-daemon
}

restart() {
	stop
	start
}
