#!/bin/bash

# source function library
. /etc/rc.d/init.d/functions

# pull in sysconfig settings
[ -f /@CMAKE_INSTALL_SYSCONFIG_PATH@/mpt-receiver-daemon ] && . /@CMAKE_INSTALL_SYSCONFIG_PATH@/mpt-receiver-daemon

start() {
	echo -n $"Starting $prog: "
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@
	@CMAKE_INSTALL_PREFIX@/bin/mpt-receiver-daemon -m $MAESTRO_BROKER_URL -L $MPT_LOG_DIR -l $MPT_LOG_LEVEL && success || failure
	echo
	return $RETVAL
}

stop() {
	echo -n $"Stopping $prog: "
	killall -TERM mpt-receiver-daemon
	echo
}

restart() {
	stop
	start
}
