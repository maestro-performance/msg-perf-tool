#!/bin/bash

# source function library
. /etc/rc.d/init.d/functions

prog=mpt-broker-inspector

# pull in sysconfig settings
[ -f /@CMAKE_INSTALL_SYSCONFIG_PATH@/${prog} ] && . /@CMAKE_INSTALL_SYSCONFIG_PATH@/${prog}



start() {
	echo -n $"Starting $prog: "
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@
	@CMAKE_INSTALL_PREFIX@/bin/${prog} -m $MAESTRO_BROKER_URL -L $MPT_LOG_DIR -l $MPT_LOG_LEVEL && success || failure
	echo
	return $RETVAL
}

stop() {
	echo -n $"Stopping $prog: "
	killall -TERM ${prog} 2>/dev/null
	echo
}

restart() {
	stop
	start
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	*)
		echo $"Usage: $0 {start|stop|restart}"
		RETVAL=2
esac
exit $RETVAL
