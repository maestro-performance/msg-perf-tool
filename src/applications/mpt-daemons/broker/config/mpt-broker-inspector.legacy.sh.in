#!/bin/bash

# source function library
. /etc/rc.d/init.d/functions

# pull in sysconfig settings
[ -f /@CMAKE_INSTALL_SYSCONFIG_PATH@/mpt-broker-inspector ] && . /@CMAKE_INSTALL_SYSCONFIG_PATH@/mpt-broker-inspector


lockfile=/var/lock/subsys/$prog

start() {
	echo -n $"Starting $prog: "
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@
	@CMAKE_INSTALL_PREFIX@/bin/mpt-broker-inspector -m $MAESTRO_BROKER_URL -L $MPT_LOG_DIR -l $MPT_LOG_LEVEL && success || failure
	echo
	return $RETVAL
}

stop() {
	echo -n $"Stopping $prog: "
	killall -TERM mpt-broker-inspector
	echo
}

restart() {
	stop
	start
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	*)
		echo $"Usage: $0 {start|stop|restart}"
		RETVAL=2
esac
exit $RETVAL
